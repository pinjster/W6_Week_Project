<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Let's Watch</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='main.css') }}">
</head>
<body>
    <nav>
        <ul>
            <li><a href="{{ url_for('main.home') }}">Home</a></li>
            <li><a href="{{ url_for('social.suggested') }}">Suggested Movies</a></li>
            {% if current_user.is_authenticated %}
                <li><a href="{{ url_for('auth.logout') }}">Log out</a></li>
                <li><a href="{{ url_for('social.myrecommends') }}">My Recommendations</a></li>
            {% else %}
                <li><a href="{{ url_for('auth.signin') }}">Sign In</a></li>
                <li><a href="{{ url_for('auth.register') }}">Register</a></li>
            {% endif %}
            <li><a href="{{ url_for('social.about') }}">About</a></li>
            <li>
                <form method="POST" action="{{ url_for('social.usersearch') }}">
                    {{ g.suf.hidden_tag() }}
                    {{ g.suf.username() }}
                    {{ g.suf.submit() }}
                </form>
            </li>
        </ul>
    </nav>
    {% if current_user.is_authenticated %}
        Hi {{ current_user.username }}!
    {% endif %}
    {% for message in get_flashed_messages() %}
        <p style="color: red;">{{ message }}</p>
    {% endfor %}
    <h1>Let's Watch..</h1>
    {% block content %}
    {% endblock content %}
</body>
</html>